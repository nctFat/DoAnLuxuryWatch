<style>
    .card-img-top {
        transition: transform .2s; /* Animation */
    }

        .card-img-top:hover {
            transform: scale(1.2); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
        }
    /* Định dạng văn bản overlay khi hover vào hình ảnh */
    /* Định dạng phần overlay */
    .image-container {
        position: relative;
        display: inline-block;
    }

    .overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        z-index: 999;
        opacity: 0; /* Ẩn văn bản ban đầu */
        transition: opacity 0.3s;
    }

    .card-img-top:hover + .overlay {
        opacity: 1; /* Hiển thị văn bản khi hình ảnh được hover */
    }

    .card-img-top:hover {
        transform: scale(1.2); /* Phóng to hình ảnh khi hover */
    }
</style>
